<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.cnu.cs.jplagui.javafx.JPlagUIController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Program">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#menuAbout" text="About...">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="A" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" onAction="#menuQuit" text="Quit">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="Q" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <BorderPane BorderPane.alignment="CENTER">
         <center>
            <ScrollPane fitToHeight="true" fitToWidth="true" BorderPane.alignment="CENTER">
               <content>
                  <TextArea fx:id="areaOutput" editable="false" />
               </content>
            </ScrollPane>
         </center>
         <top>
            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox spacing="10.0">
                     <children>
                        <Label minHeight="27.0" text="Code directory" />
                        <Label minHeight="27.0" text="Language" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
                  <VBox spacing="10.0">
                     <children>
                        <TextField fx:id="fieldLocation" editable="false" prefWidth="300.0">
                           <cursor>
                              <Cursor fx:constant="NONE" />
                           </cursor>
                        </TextField>
                        <ChoiceBox fx:id="comboLanguage" onDragDetected="#comboLanguageSelected" />
                        <CheckBox fx:id="checkRecurse" mnemonicParsing="false" onAction="#checkRecurseSelected" text="Recurse sub-directories" />
                        <CheckBox fx:id="checkWebBrowser" mnemonicParsing="false" onAction="#checkWebBrowserSelected" text="Show results in web browser" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
                  <VBox spacing="10.0">
                     <children>
                        <Button fx:id="buttonBrowse" mnemonicParsing="false" onAction="#buttonBrowsePressed" text="Browse" />
                        <Button fx:id="buttonRun" mnemonicParsing="false" onAction="#buttonRunPressed" text="Run JPlag" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </children>
            </HBox>
         </top>
      </BorderPane>
   </center>
</BorderPane>
